<%- include("partials/header.ejs") %>
<link rel="stylesheet" href="/public/register.css">

<body class="register-page">
    <div class="register-wrapper">
        <div class="register-container">
            <!-- Left Section with Image and Text -->
            <div class="image-section">
                <div class="image-content">
                    <h2>Fresh. Made For You.</h2>
                    <p>Join Subway® Rewards and earn points on every purchase</p>
                    <div class="subway-tagline">
                        <span>Eat Fresh®</span>
                    </div>
                </div>
            </div>
            
            <!-- Right Section with Registration Form -->
            <div class="form-section">
                <h1 class="form-title">Register</h1>

                <form action="/register" method="post" class="form">
                    
                    
                    <div class="form-group">
                        <label class="form-label" for="username">Username</label>
                        <input type="text" name="username" id="username" placeholder="Enter your username" 
                               class="form-input" pattern="^[a-zA-Z0-9]+$" 
                               title="Username can only contain letters and numbers." required>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label" for="email">Email</label>
                        <input type="email" name="email" id="email" placeholder="Enter your email" 
                               class="form-input" required>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label" for="password">Password</label>
                        <input type="password" name="password" id="password" placeholder="Enter your password" 
                               class="form-input" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$" 
                               title="Password must be at least 8 characters long with uppercase, lowercase, number, and special character." required>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label" for="phone">Phone Number</label>
                        <input type="tel" name="phone" id="phone" placeholder="Enter your phone number" 
                               class="form-input" pattern="^[0-9]{10,15}$" 
                               title="Phone number must be 10-15 digits." required>
                    </div>
                    
                    <button type="submit" class="register-btn">Create Account</button>
                </form>

                <div class="additional-info">
                    <p>Already have an account? <a href="/login" class="link">Login here</a></p>
                </div>
            </div>
        </div>
    </div>

    <%- include("partials/footer.ejs") %>
</body>