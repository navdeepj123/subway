<%- include ("partials/header.ejs") %> <!-- Includes the header -->

<link rel="stylesheet" href="/public/register.css"> <!-- Linking to the CSS file -->

<body>
    <div class="container"> <!-- Container for the registration form -->
        <h1 class="heading">Register</h1> 

        <!-- Registration form -->
        <form action="/register" method="post" class="register-form">
            <div class="form-group">
                <input type="text" name="username" id="username" placeholder="Username" class="form-control" 
                    pattern="^[a-zA-Z0-9]+$" 
                    title="Username can only contain letters and numbers." 
                    required>
            </div>
            <div class="form-group">
                <input type="password" name="password" id="password" placeholder="Password" class="form-control" 
                    pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$" 
                    title="Password must be at least 8 characters long, include an uppercase letter, a lowercase letter, a number, and a special character." 
                    required>
            </div>
            <div class="form-group">
                <input type="email" name="email" id="email" placeholder="Email" class="form-control" required>
            </div>
            <div class="form-group">
                <input type="tel" name="phone" id="phone" placeholder="Phone Number" class="form-control" 
                    pattern="^[0-9]{10,15}$" 
                    title="Phone number must be between 10 to 15 digits." 
                    required>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div> 

    <%- include ("partials/footer.ejs") %> <!-- Includes the footer -->
</body>
