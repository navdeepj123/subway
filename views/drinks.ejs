<%- include ("partials/header2.ejs") %> <!-- Includes the header -->

<style>
    /* CSS styles for the table */
    .menu {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .menu-item {
        width: 250px;
        height: 350px;
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 20px;
        text-align: center;
        transition: transform 0.3s, box-shadow 0.3s;
        border-radius: 10px;
        overflow: hidden;
        position: relative;
    }

    .menu-item:hover {
        transform: scale(1.05);
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    .menu-item img {
        max-width: 90%;
        max-height: 90%;
        border-radius: 10px;
    }

    .menu-item h3 {
        font-size: 20px;
        margin: 10px 0;
    }

    .menu-item p {
        font-size: 16px;
    }

    .cart-container {
        text-align: center;
        margin-top: 20px;
    }

    .cart {
        border: 1px solid #ddd;
        padding: 10px;
        max-width: 400px;
        margin: 0 auto;
        background: #f9f9f9;
    }

    .cart-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 5px 10px;
        border-bottom: 1px solid #ddd;
    }

    .remove-btn {
        background-color: red;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .remove-btn:hover {
        background-color: darkred;
    }
</style>

<section id="drinks" class="menu">
    <h2>Drinks Menu</h2>
    
    <!-- Featured Drink of the Day -->
    <div class="featured-drink">
        Today's Featured Drink: <strong>Mango Smoothie - $4.99</strong>
    </div>

    <section id="menu" class="menu">
        <div class="menu-item" data-name="Cola" data-price="2.49">
            <img src="https://th.bing.com/th/id/R.afe43d5e13e9066c7fe8fc083813b009?rik=nF8Dpom5FKH99w&pid=ImgRaw&r=0" alt="Cola">
            <h3>Cola</h3>
            <p>Classic cola served with ice.</p>
            <p>Price: $2.49</p>
            <button onclick="addToCart(this)">Add to Cart</button>
        </div>

        <div class="menu-item" data-name="Mango Smoothie" data-price="4.99">
            <img src="https://th.bing.com/th/id/OIP.yRWndmhKtrlHVqusSl29KgHaFj?pid=ImgDet&rs=1" alt="Mango Smoothie">
            <h3>Mango Smoothie</h3>
            <p>Smooth and creamy mango smoothie.</p>
            <p>Price: $4.99</p>
            <button onclick="addToCart(this)">Add to Cart</button>
        </div>

        <div class="menu-item" data-name="Cappuccino" data-price="3.99">
            <img src="https://th.bing.com/th/id/OIP.PCT4H4UkbrmyHzfpumP80QHaFb?pid=ImgDet&rs=1" alt="Cappuccino">
            <h3>Cappuccino</h3>
            <p>Rich and frothy cappuccino.</p>
            <p>Price: $3.99</p>
            <button onclick="addToCart(this)">Add to Cart</button>
        </div>
    </section>
</section>

<!-- Shopping Cart -->
<div class="cart-container">
    <h3>Your Cart</h3>
    <div class="cart" id="cart">
        <p>No items in cart.</p>
    </div>
</div>

<script>
    let cart = [];

    function addToCart(button) {
        let item = button.closest('.menu-item');
        let itemName = item.getAttribute('data-name');
        let itemPrice = parseFloat(item.getAttribute('data-price'));

        cart.push({ name: itemName, price: itemPrice });
        updateCart();
    }

    function updateCart() {
        let cartContainer = document.getElementById("cart");
        cartContainer.innerHTML = "";

        if (cart.length === 0) {
            cartContainer.innerHTML = "<p>No items in cart.</p>";
            return;
        }

        let total = 0;
        cart.forEach((item, index) => {
            total += item.price;
            let cartItem = document.createElement("div");
            cartItem.classList.add("cart-item");
            cartItem.innerHTML = `
                <span>${item.name} - $${item.price.toFixed(2)}</span>
                <button class="remove-btn" onclick="removeFromCart(${index})">Remove</button>
            `;
            cartContainer.appendChild(cartItem);
        });

        let totalElement = document.createElement("p");
        totalElement.innerHTML = `<strong>Total: $${total.toFixed(2)}</strong>`;
        cartContainer.appendChild(totalElement);
    }

    function removeFromCart(index) {
        cart.splice(index, 1);
        updateCart();
    }
</script>

