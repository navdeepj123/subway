<style>
    /* CSS styles for the menu */
    .menu {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .menu-item {
        width: 250px;
        height: 350px;
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 20px;
        text-align: center;
        transition: transform 0.3s, box-shadow 0.3s;
        border-radius: 10px;
        overflow: hidden;
    }

    .menu-item:hover {
        transform: scale(1.05);
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    .menu-item img {
        max-width: 100%;
        max-height: 100%;
        border-radius: 10px;
    }

    .menu-item h3 {
        font-size: 20px;
        margin: 10px 0;
    }

    .menu-item p {
        font-size: 16px;
    }
</style>

