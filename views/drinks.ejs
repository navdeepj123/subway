<script>
    function filterDrinks() {
        let filter = document.getElementById("drink-filter").value;
        let drinks = document.querySelectorAll(".menu-item");

        drinks.forEach(drink => {
            let category = drink.getAttribute("data-category");

            if (filter === "all" || category === filter) {
                drink.style.display = "block";
            } else {
                drink.style.display = "none";
            }
        });
    }

    function showConfirmation(event) {
        event.preventDefault(); // Prevent form submission for demo
        let confirmation = document.getElementById("confirmation-message");
        confirmation.style.display = "block";
        setTimeout(() => confirmation.style.display = "none", 2000);
    }
</script>

