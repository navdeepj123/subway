    .cart-btn img {
        margin-right: 10px;
        width: 24px;
        height: 24px;
    }

    .overlay {
        position: fixed;
        top: 0; left: 0;
        width: 100%; height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: none;
        z-index: 999;
    }

    .info-popup {
        position: fixed;
        top: 50%;
        left: 50%;
        width: 300px;
        transform: translate(-50%, -50%);
        background-color: white;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
        z-index: 1000;
        display: none;
        text-align: left;
    }

    .info-popup h4 {
        margin-bottom: 10px;
        color: #007bff;
    }

    .info-popup p {
        margin: 6px 0;
        font-size: 14px;
        color: #444;
    }

    .close-btn {
        background-color: #dc3545;
        color: white;
        padding: 5px 10px;
        border: none;
        border-radius: 5px;
        float: right;
        cursor: pointer;
    }
</style>


