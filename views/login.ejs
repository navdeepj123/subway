<link rel="stylesheet" href="/public/login.css">

<body class="login-page">
    <%- include("partials/header.ejs") %>
    
    <div class="login-wrapper">
        <div class="login-container">
            <!-- Left Section with Image and Text -->
            <div class="image-section">
                <div class="image-content">
                    <h2>Fresh. Made For You.</h2>
                    <p>Customize your perfect sub just the way you like it</p>
                    <div class="subway-tagline">
                        <span>Eat Fresh¬Æ</span>
                    </div>
                </div>
            </div>
            
            <!-- Right Section with Login Form -->
            <div class="form-section">
                <h1 class="form-title">Login</h1>

                <% if (errorMessage) { %>
                    <div class="alert alert-danger"><%= errorMessage %></div>
                <% } %>

                <form action="/auth" method="post" class="form">
                    
                    
                    <div class="form-group">
                        <label class="form-label" for="username">Username</label>
                        <input type="text" name="username" id="username" placeholder="Enter your username" class="form-input" required>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label" for="password">Password</label>
                        <div class="password-wrapper">
                            <input type="password" name="password" id="password" placeholder="Enter your password" class="form-input" required>
                            <button type="button" class="toggle-password">üëÅ</button>
                        </div>
                    </div>
                    
                    <div class="form-group form-check">
                        <input type="checkbox" id="rememberMe" name="rememberMe">
                        <label for="rememberMe">Remember Me</label>
                    </div>
                    
                    <button type="submit" class="login-btn">Login</button>
                </form>

                <div class="additional-info">
                    <p>Forgot Password? <a href="/reset-password" class="link">Click here</a></p>
                    <p>Don't have an account? <a href="register" class="link">Register here</a></p>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.querySelector('.toggle-password').addEventListener('click', function() {
            let passwordInput = document.getElementById('password');
            passwordInput.type = passwordInput.type === 'password' ? 'text' : 'password';
        });
    </script>

    <%- include("partials/footer.ejs") %>
</body>