<%- include ("partials/header.ejs") %> <!-- Includes the header  -->

<link rel="stylesheet" href="/public/login.css"> <!-- Linking to the external stylesheet -->

<body>
    <div class="container"> <!-- Container for login form -->
        <h1 class="heading">Login</h1>
        
        <% if (errorMessage) { %>
            <div class="alert alert-danger"> <%= errorMessage %> </div> <!-- Display error messages -->
        <% } %>

        <form action="/auth" method="post" class="form"> <!-- Login form -->
            <input type="hidden" name="_csrf" value="<%= csrfToken %>"> <!-- CSRF Protection -->
            
            <div class="form-group"> <!-- Form group for username -->
                <label for="username">Username</label>
                <input type="text" name="username" id="username" placeholder="Enter your username" class="form-control" required>
            </div>
            
            <div class="form-group"> <!-- Form group for password -->
                <label for="password">Password</label>
                <div class="password-wrapper">
                    <input type="password" name="password" id="password" placeholder="Enter your password" class="form-control" required>
                    <button type="button" class="toggle-password">üëÅ</button> <!-- Password visibility toggle -->
                </div>
            </div>
            
            <div class="form-group form-check"> <!-- Remember me checkbox -->
                <input type="checkbox" id="rememberMe" name="rememberMe">
                <label for="rememberMe">Remember Me</label>
            </div>
            
            <button type="submit" class="btn btn-primary">Login</button> <!-- Submit button -->
        </form>

        <div class="additional-info"> <!-- Additional information section -->
            <h4>Forgot Password? <a href="/reset-password" class="link">Click here</a></h4>
            <h4>Don't have an account? <a href="register" class="link">Register here</a></h4>
        </div>
    </div> <!-- Closing container div -->

    <script>
        document.querySelector('.toggle-password').addEventListener('click', function() {
            let passwordInput = document.getElementById('password');
            passwordInput.type = passwordInput.type === 'password' ? 'text' : 'password';
        });
    </script>

    <%- include ("partials/footer.ejs") %> <!-- Includes the footer -->
</body>
