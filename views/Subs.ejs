<script>
    // JavaScript for Dynamic Price Calculation
    document.querySelectorAll('.menu-item').forEach(item => {
        const basePrice = parseFloat(item.querySelector('.base-price').innerText);
        const priceElement = item.querySelector('.price');
        const checkboxes = item.querySelectorAll('input[type="checkbox"]');

        checkboxes.forEach(checkbox => {
            checkbox.addEventListener('change', () => {
                let totalPrice = basePrice;
                checkboxes.forEach(cb => {
                    if (cb.checked) {
                        totalPrice += parseFloat(cb.value);
                    }
                });
                priceElement.innerHTML = `Price: $<span class="base-price">${totalPrice.toFixed(2)}</span>`;
            });
        });
    });

    // JavaScript for Nutrition Info Toggle
    document.querySelectorAll('.nutrition-btn').forEach(button => {
        button.addEventListener('click', () => {
            const nutritionInfo = button.nextElementSibling;
            nutritionInfo.style.display = nutritionInfo.style.display === 'block' ? 'none' : 'block';
        });
    });

    // JavaScript for Shopping Cart
    document.querySelectorAll('.btn').forEach(button => {
        button.addEventListener('click', () => {
            const menuItem = button.closest('.menu-item');
            const itemName = menuItem.querySelector('h3').innerText;
            const itemPrice = parseFloat(menuItem.querySelector('.base-price').innerText);
            const itemQuantity = parseInt(menuItem.querySelector('input[type="number"]').value);

            const cartItem = document.createElement('div');
            cartItem.innerText = `${itemQuantity}x ${itemName} - $${(itemPrice * itemQuantity).toFixed(2)}`;
            document.getElementById('cart-items').appendChild(cartItem);

            // Update Total Price
            const totalPrice = parseFloat(document.getElementById('total-price').innerText);
            document.getElementById('total-price').innerText = (totalPrice + itemPrice * itemQuantity).toFixed(2);
        });
    });
</script>