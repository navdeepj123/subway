    }

    .menu {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
        padding: 20px;
    }

    .menu-item {
        width: 280px;
        height: auto; /* Adjusted height for flexibility */
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 20px;
        text-align: center;
        transition: transform 0.3s, box-shadow 0.3s;
        border-radius: 10px;
        overflow: hidden;
        position: relative;
        animation: fadeIn 0.5s ease-in; /* Animation for menu items */
    }

    .menu-item:hover {
        transform: scale(1.05);
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }

    .menu-item img {
        max-width: 100%;
        max-height: 150px;
        border-radius: 10px;
        margin-bottom: 10px;
    }

    .menu-item h3 {
        font-size: 22px;
        margin: 10px 0;
        color: #333;
    }

    .menu-item p {
        font-size: 16px;
        color: #666;
        font-weight: 500;
        margin: 5px 0;
    }

    .price {
        font-size: 20px;
        font-weight: bold;
        color: #e44d26;
        margin: 10px 0;
    }

    .quantity-selector {
        margin: 10px 0;
    }

    .quantity-selector input {
        width: 50px;
        text-align: center;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 5px;
    }

    .btn {
        background-color: #28a745;
        color: white;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
        font-size: 16px;
        border-radius: 5px;
        transition: background 0.3s;
        margin-top: 10px;
    }

    .btn:hover {
        background-color: #218838;
    }

    /* Customization Options */
    .customization {
        margin: 10px 0;
        text-align: left;
    }

    .customization label {
        display: block;
        margin: 5px 0;
        font-size: 14px;
        color: #555;
    }

    .customization select, .customization input[type="checkbox"] {
        margin: 5px 0;
    }

    /* Nutritional Information */
    .nutrition-info {
        display: none;
        margin: 10px 0;
        font-size: 14px;
        color: #555;
    }

    .nutrition-btn {
        background-color: #007bff;
        color: white;
        padding: 5px 10px;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        font-size: 14px;
        margin: 5px 0;
    }

    .nutrition-btn:hover {
        background-color: #0056b3;
    }

    /* Shopping Cart */
    #cart {
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        max-width: 600px;
        text-align: center;
        background-color: #fff;
    }

    #cart-items {
        margin: 10px 0;
    }

    #cart-items div {
        margin: 5px 0;
        font-size: 16px;
        color: #333;
    }

    #total-price {
        font-weight: bold;
        color: #e44d26;
    }

    /* Delivery and Pickup Options */
    .delivery-options {
        margin: 20px 0;
        text-align: center;
    }

    .delivery-options label {
        margin: 0 10px;
        font-size: 16px;
        color: #555;
    }

    /* Social Media Integration */
    .social-media {
        text-align: center;
        margin: 20px 0;
    }

    .social-media a {
        margin: 0 10px;
        color: #007bff;
        text-decoration: none;
        font-size: 16px;
    }

    .social-media a:hover {
        text-decoration: underline;
    }

    /* Contact Information */
    .contact-info {
        text-align: center;
        margin: 20px 0;
        font-size: 16px;
        color: #555;
    }

    /* Animations */
    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
</style>

